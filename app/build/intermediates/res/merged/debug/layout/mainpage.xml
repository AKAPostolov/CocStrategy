<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:id="@+id/relativeLayout"
    android:background="@android:color/white">
    <ImageView
        android:id="@+id/ImageSwitcherBackground"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/map1">
    </ImageView>
    <LinearLayout
        android:id="@+id/LinearLayout_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

    </LinearLayout>
    <Button
        android:id="@+id/button1"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:height="5dp"
        android:background="@drawable/coc_button_green"
        android:clickable="true"
        android:onClick="manageButtons"
        android:shadowColor="@color/Black"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="1"
        android:tag="1"
        android:text="@string/btn_elixir_normal"
        android:textColor="@color/Fuchsia"
        android:textSize="8sp"
        android:visibility="visible"/>

    <Button
        android:id="@+id/button2"
        android:tag="2"
        android:onClick="manageButtons"
        android:textColor="@color/Black"
        android:shadowColor="@color/White"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="1"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:textSize="8sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="35dp"
        android:height="5dp"
        android:background="@drawable/coc_button_green"
        android:text="@string/btn_elixir_oscuro"/>

    <Button
        android:id="@+id/button3"
        android:tag="3"
        android:onClick="manageButtons"
        android:textColor="@color/White"
        android:shadowColor="@color/Black"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="1"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:textSize="10sp"
        android:height="5dp"
        android:background="@drawable/coc_button_green"
        android:text="@string/btn_hechizos"
        android:layout_alignTop="@+id/button1"
        android:layout_toRightOf="@+id/button1"/>

    <Button
        android:id="@+id/button4"
        android:tag="4"
        android:onClick="manageButtons"
        android:textColor="@color/White"
        android:shadowColor="@color/Black"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="1"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:textSize="10sp"
        android:height="5dp"
        android:background="@drawable/coc_button_green"
        android:text="@string/btn_tropas"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/button1"/>
    <Button
        android:id="@+id/button5"
        android:visibility="gone"
        android:tag="5"
        android:clickable="true"
        android:onClick="manageButtons"
        android:textColor="@color/Orange1"
        android:shadowColor="@color/Teal"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="1"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:height="5dp"
        android:textStyle="bold"
        android:background="@drawable/coc_button_green_square"
        android:text="+"/>
</RelativeLayout>
